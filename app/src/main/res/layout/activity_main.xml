<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#20313F"
    android:weightSum="1"

    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView

            android:id="@+id/ma"
            android:layout_width="306dp"
            android:layout_height="46dp"
            android:background="@drawable/ma"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"


            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.078" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="45dp"
            android:layout_height="46dp"
            android:onClick="con"
            android:background="@drawable/mb"
            app:layout_constraintBottom_toBottomOf="@+id/ma"
            app:layout_constraintEnd_toEndOf="@id/ma"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/ma"
            app:layout_constraintTop_toTopOf="@+id/ma" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="207dp"
            android:layout_height="47dp"
            android:hint="Enter the amount..."
            android:inputType="numberDecimal"

            android:textColor="@color/colorPrimaryDark"


            android:textColorHint="#CECECE"
            android:textSize="18dp"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ma"
            app:layout_constraintEnd_toEndOf="@+id/ma"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/ma"
            app:layout_constraintTop_toTopOf="@+id/ma"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="250.972dp"
            android:layout_height="39dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/mc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ma" />








        <ImageView
        android:id="@+id/iv2"
        android:layout_width="250.972dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/md"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv1" />



    <ImageView
        android:id="@+id/iv3"
        android:layout_width="250.972dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/me"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv2" />



    <ImageView
    android:id="@+id/iv4"
    android:layout_width="250.972dp"
    android:layout_height="39dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/mf"

    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/iv3" />


    <ImageView
        android:id="@+id/iv5"
        android:layout_width="250.972dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mg"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv4" />


    <ImageView
        android:id="@+id/iv6"
        android:layout_width="250.972dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mh"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv5" />



    <ImageView
        android:id="@+id/iv7"
        android:layout_width="250.972dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mi"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv6" />


    <ImageView
        android:id="@+id/iv8"
        android:layout_width="250.972dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mj"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv7" />




        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="420dp"
            app:layout_constraintTop_toTopOf="@+id/iv1"
            app:layout_constraintBottom_toBottomOf="@id/iv8"
            app:layout_constraintStart_toStartOf="@id/iv5"
            android:layout_marginLeft="8.5dp"

            >

            <RadioButton
                android:id="@+id/rd1"
                android:layout_marginTop="1.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rd2"
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rd3"
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rd4"
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rd5"
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rd6"
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rd7"
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rd8"
                android:layout_marginTop="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </RadioGroup>

        <Button
            android:id="@+id/icon"
            android:layout_width="51dp"
            android:layout_height="31dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/xxx"
            android:onClick="about"
            android:text="About"
            android:textAllCaps="false"
            android:textColor="#20313F"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv8" />

        <Button
            android:id="@+id/clear"
            android:layout_width="51dp"
            android:layout_height="31dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/xxx"
            android:onClick="clear"
            android:text="Clear"
            android:textAllCaps="false"
            android:textColor="#20313F"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.298"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toBottomOf="@+id/iv8"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
